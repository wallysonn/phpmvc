    function urlParamToArray($param)
    {
        //a=1&b=2&c=3...
        $arr = array();
        $spl = explode("&", $param);

        foreach ($spl as $part) {
            $spl_part = explode("=", $part);
            $arr[$spl_part[0]] = (isset($spl_part[1])) ? urldecode($spl_part[1]) : "";
        }

        return $arr;

    }

